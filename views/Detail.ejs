<%- include('partials/header') %>
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <label class="modal-title text-center font-weight-bold">Are you sure?</label>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body p-2 m-2">
            <div class="form-group justify-content-center text-center">
       <label class="w-100"  > Enter the blog title in below box :<br><kbd class="text-center"><%= blog.title %></kbd></label>
          <input  type="text" class="form-control p-2 " id="delete_title"></div>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-outline-danger" data-blogid="<%= blog._id %>" data-blogtitle="<%= blog.title %>"  id="delete_confirm" data-dismiss="modal">Confirm <i class="fa fa-trash" aria-hidden="true"></i> </button>
          <button type="button" class="btn btn-outline-dark" id="delete_cancel" data-dismiss="modal">Cancel  <i class="fa fa-backward" aria-hidden="true"></i> </button>
        </div>
        
      </div>
    </div>
  </div>
  

<div  class="container-fluid">
    <div class="jumbotron ">
        <div class="container">
            <h3 class="font-weight-bolder w-50 m-auto  blog_detail_title font-weight-normal"><%= blog.title %></h3>
            <hr class="my-2">
        </div>
    

    <div class="card border-dark  col-12 ">
        <div class="card-body p-2 ">
         <label class="p-2 badge">Category:</label> <h4 class="card-title badge"><%= blog.category %></h4>
          <p class="blog_detail_content"><%= blog.content %></p>
          
        </div>

        <div class="d-flex justify-content-between">
        <label class="card-title blog_date blog_detail_date m-0  "><%= blog.createdAt.toString().substring(0,15) %></label>

        <div class="d-flex justify-content-center  p-2">

    <button  class="btn btn-md btn-outline-danger m-2" id="delete_post" data-toggle="modal" data-target="#myModal">  <i class="fa fa-trash" aria-hidden="true"></i>
        </button>
        <a class="btn btn-md btn-outline-info m-2" data-toogle="tooltip" title="Edit this blog" href="/blog/<%= blog._id %>/edit" role="link"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </a>
        </div></div>
</div>
<script defer src="/scripts/main.js"></script>
 <%- include('partials/footer') %>

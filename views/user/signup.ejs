<%- include("../partials/header") %>
<br><br>
<title>Create</title>
<div class="container-fluid">
<div class="alert alert-primary alert-dismissible  " style='display :none;z-index:11;width: 90%;position: absolute;' id="blog_success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <strong>Blog created ...</strong>
</div>
<div class="jumbotron page_jumbo p-4">
    <div class="container">
        <h4 class="display text-center  blog_header font-weight-bold" style="margin-top: 80px;">User Signup</h4>
        <hr class="my-2">
       
    </div>
</div>
<!-- check errors-->
<% if(typeof errors != "undefined") { %> 
    <%- include("../partials/showerrors")  %> 
    <% } %>
<form method="POST" action="/user/signup" name="signup_form" id="signup_form" class="p-4 container ">
 
<div class = "form-group row justify-content-center mb-4    ">
    <label class="col-md-2 font-weight-bold blog_field_label text-md-center" for = "blog_title">UserName</label>
    <input type = "text" class = "form-control col-md-4"   name="userName" id = "user_name" placeholder = "Enter your name">
</div>



<div class = "form-group row justify-content-center mb-4">
    <label class="col-md-2 font-weight-bold text-md-center blog_field_label" for = "user_email">UserEmail </label>
    <input type = "text" class = "form-control col-md-4"  id = "user_email" name="userEmail" placeholder = "Enter your email">
   
</div>

<div class = "form-group row  justify-content-center mb-4">
    <label class="col-md-2 font-weight-bold text-md-center blog_field_label" for = "user_password">UserPassword </label>
<div class="input-group  col-md-4 mb-3 input-group-md p-0">
    <input type="text"   name="userPassword" id="user_password" class="form-control p-3" placeholder="Create new password">
    <div class="input-group-append">
        <span class="input-group-text">Large</span>
      </div>
  </div>
</div>
 <div class="form-group row justify-content-center">
    <div class="form-group col-md-2 text-center">

<input type="submit" value="Create" id="signup_btn" class="btn btn-md btn-outline-dark btn_hover btn_form bg-dark "></div>
<div class="form-group col-md-2 text-center">
<input type="reset" value="Clear" class="btn btn-md btn-warning btn_form_clear btn_hover btn-outline-dark btn_form">
</div>
</div>
</form>
</div>
<script>
</script>
<script src="/scripts/main.js"></script>


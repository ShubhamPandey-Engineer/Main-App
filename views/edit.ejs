<title>Edit</title>
<% if(typeof data == "undefined")  {%>
    <%-  include("partials/header") %> 
    <% }   else { %>
       <%-  include("partials/header-login") %>
      <% } %>

<link rel="stylesheet/css" href="/style/main.css">
<div class="container-fluid mt-5">
    <div class="jumbotron page_jumbo p-4 " style="margin-top: 60px;">
        <div class="container">
            <h4 class="display text-center  blog_header font-weight-bold">Edit Blog</h4>
            <hr class="my-2">

        </div>
    </div>
<form method="POST" action="/blogs/edit/<%= blog._id %>" name="myblog" class="p-4">
 
<div class = "form-group row justify-content-center ">
    <label class="col-md-1 font-weight-bold  blog_field_label "  for = "blog_title">Title</label>
    <input type = "text" class = "form-control col-md-10" value="<%= blog.title %>"  maxlength="30" name="blog_title" id = "blog_title" placeholder = "Enter Blog Title(max. 30)">
 </div>

  
<div class = "form-group row justify-content-center ">
    <label class="col-md-1 font-weight-bold blog_field_label" for = "blog_category font-weight-bold">Category</label>
    <input type = "text" value="<%= blog.category %>"  class = "form-control col-md-10" id = "blog_category" name="blog_category" placeholder = "Enter Blog Category">
 </div>

  
<div class = "form-group row justify-content-center">
    <label class="col-md-1 font-weight-bold blog_field_label" for = "blog_content">Content</label>
    <textarea    class="col-md-10 form-control "  rows="15" name="blog_content"><%= blog.content %></textarea>
 </div>
 <div class="form-group row justify-content-center">
<input type="submit" value="Update" id="create_blog" class="btn btn-lg btn-outline-dark btn_form m-2">
<input type="reset" value="Clear" class="btn btn-lg btn-outline-dark btn_form_clear m-2 ">

</div>
</form>
</div>
<%- include ('partials/footer') %>


<%- include ('partials/header')  %>
<link rel="stylesheet/css" href="/style/main.css"
<div class="container">
<div class="alert alert-primary alert-dismissible  " style='display :none;z-index:11;width: 90%;position: absolute;' id="blog_success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
    </button>
    <strong>Blog created ...</strong>
</div>
<form method="POST" action="/blog/<%= blog._id %>" name="myblog" class="p-4">
 
<div class = "form-group row justify-content-center ">
    <label class="col-md-1 font-weight-bold  blog_field_label "  for = "blog_title">Title</label>
    <input type = "text" class = "form-control col-md-10" value="<%= blog.title %>"  maxlength="30" name="blog_title" id = "blog_title" placeholder = "Enter Blog Title(max. 30)">
 </div>

  
<div class = "form-group row justify-content-center ">
    <label class="col-md-1 font-weight-bold blog_field_label" for = "blog_category font-weight-bold">Category</label>
    <input type = "text" value="<%= blog.category %>"  class = "form-control col-md-10" id = "blog_category" name="blog_category" placeholder = "Enter Blog Category">
 </div>

  
<div class = "form-group row justify-content-center">
    <label class="col-md-1 font-weight-bold blog_field_label" for = "blog_content">Content</label>
    <textarea    class="col-md-10 form-control "  rows="5" name="blog_content"><%= blog.content %></textarea>
 </div>
 <div class="form-group row justify-content-center">
<input type="submit" value="Update" id="create_blog" class="btn btn-md btn-outline-info m-2">
<input type="reset" value="Clear" class="btn btn-md btn-outline-warning m-2">

</div>
</form>
</div>
<%- include ('partials/footer') %>

